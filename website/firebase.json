{
    "hosting": {
        "public": "dist",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],

        "rewrites": [
            {
                "regex": "/l/([A-Za-z0-9_-]+)",
                "destination": "/api/links/:1"
            },
            {
                "source": "/api**",
                "run": {
                    "serviceId": "faxer-server",
                    "region": "europe-west1"
                }
            }
        ]
    }
}
