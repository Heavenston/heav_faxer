{
    "hosting": {
        "public": "dist",
        "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],

        "rewrites": [
            {
                "regex": "/api.*",
                "run": {
                    "serviceId": "faxer-server",
                    "region": "europe-west1"
                }
            },
            {
                "regex": "/l/([A-Za-z0-9_-]+)",
                "run": {
                    "serviceId": "faxer-server",
                    "region": "europe-west1"
                }
            }
        ]
    },
    "emulators": {
        "hosting": {
            "port": 5000
        },
        "ui": {
            "enabled": true
        }
    }
}
