{
    "hosting": {
        "public": "dist",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],

        "redirects": [
            {
                "regex": "/l/([A-Za-z0-9_-]+)",
                "destination": "/api/links/:1",
                "type": 302
            }
        ],

        "rewrites": [
            {
                "regex": "/api.*",
                "run": {
                    "serviceId": "faxer-server",
                    "region": "europe-west1"
                }
            }
        ]
    },
    "emulators": {
        "hosting": {
            "port": 5000
        },
        "ui": {
            "enabled": true
        }
    }
}
